<%- include('header'); -%>


    <h1>category :</h1>

    <div class="container">

        <table class="table table-striped table-dark">
            <thead>
                <tr class="table100-head">
                    <th class="column">ID</th>
                    <th class="column">Categorie</th>

                    <th style="width: 50px;" class="column"></th>
                    <th style="width: 80px;" class="column"></th>



                </tr>
            </thead>
            <tbody>
                <% category.forEach(function (cat) { %>
                    <tr>
                        <td class="column">
                            <%= cat.id %>
                        </td>
                        <td class="column">
                            <%= cat.catname %>
                        </td>


                        <td><a href="/delete/cat/<%= cat.id %>" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                        <td><a href="/updatecategory/<%= cat.id %> " class="btn btn-sm btn-success"> UPDATE</a> </td>

                    </tr>

                    <% }) %>
            </tbody>
        </table>

        <div class="link">

            <a href="/addcat" class="add">/Add Category</a>
            <a href="/" class="add">/Produits</a>
        </div>

    </div>








    </body>

    </html>